<h4 class="center">Forgot your password?</h4>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), class: "col s12" , html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="row">
    <div class="input-field col s12">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "validate" %>
    </div>
  </div>

  <div class="row">
    <div class="col s6 push-s6">
      <%= f.submit "Send me reset password instructions", class: "btn waves-effect waves-light right" %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
