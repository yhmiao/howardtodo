<%= render "todos/partials/notice", notice: notice %>

<h4 class="center">Todos</h4>

<div class="row">
  <div class="col s12">
    <%= link_to new_todo_path, class: "right" do %>
      <i class="material-icons">add</i>
    <% end %>
  </div>
</div>

<ul id="todo_index" class="collapsible">
  <% @todos.each do |todo| %>
    <%= render 'todos/partials/index_li', todo: todo, act: nil %>
  <% end %>
</ul>
